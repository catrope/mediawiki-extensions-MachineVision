{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"globals": {
		"mw": false,
		"OO": false,
		"require": "readonly",
		"module": false
	},
	"rules": {
		"no-jquery/variable-pattern": "off"
	},
	"overrides": [
		{
			"files": [ "**/*.vue" ],
			"extends": [
				"plugin:vue/recommended",
				"plugin:es/no-2015"
			],
			"plugins": [ "es" ],
			"parserOptions": {
				"sourceType": "script",
				"ecmaFeatures": {
					"jsx": false
				}
			},
			"rules": {
				"no-implicit-globals": 0,
				"vue/html-indent": [ "warn", "tab" ],
				"vue/html-closing-bracket-newline": "off",
				"vue/max-attributes-per-line": [ "warn", {
					"singleline": 2,
					"multiline": {
						"max": 1,
						"allowFirstLine": true
					}
				} ],
				"vue/v-on-style": [ "error", "longform" ],
				"vue/v-bind-style": [ "error", "longform" ],
				"vue/v-slot-style": [ "error", "longform" ]
			}
		}
	]
}
